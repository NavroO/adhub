FROM golang:1.25 AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /graphql-gateway ./cmd/graphql-gateway

FROM golang:1.25

WORKDIR /app
COPY --from=builder /graphql-gateway .
EXPOSE 8081
ENTRYPOINT ["/app/graphql-gateway"]
